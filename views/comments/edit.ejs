 <%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/posts/ <%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">SUBMIT</button>
                </div>
            </form>
            <a class="btn btn-xs btn btn-primary" href="/posts/<%= campground_id %>"> << BACK </a>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>