<%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <h1 class="heading">Add New Post</h1>
        <div id="dabba" class="dabba">
            <form action="/admin" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="imageURL" name="image">
                </div>
                <div class="form-group">
                    <label>LOCATION</label>
                    <input  class="form-control lcn" type="text" placeholder="state" name="state">
                    <input class="form-control" type="text" placeholder="city" name="city">
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">SUBMIT</button>
                </div>
            </form>
            <a class="btn btn-primary btn-xs" href="/posts"> << BACK </a>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>