<%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.title %></h1>
        <div id="dabba" class="dabba">
            <form action="/posts/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="campground[title]" value="<%=campground.title%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="campground[image]" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label>LOCATION</label>
                    <input  class="form-control lcn" type="text" value="<%=campground.state%>" name="state">
                    <input class="form-control" type="text" value="<%=campground.city%>" name="city">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="campground[description]" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">SUBMIT</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>